<Window x:Class="Wpf.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Console"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" x:Name="outputTextBox"></TextBlock>
        <TextBox DockPanel.Dock="Top" x:Name="inputTextBox" KeyDown="inputTextBox_KeyDown"></TextBox>
    </DockPanel>
</Window>
